    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:win="clr-namespace:Demo.Windows.Core;assembly=Demo.Windows.Core"
    Title="{Binding SystemTitle}"
    Width="1600"
    Height="900"
    FuX:ResxLocalizationProvider.DefaultAssembly="Demo.AutoTest.Language"
    FuX:ResxLocalizationProvider.DefaultDictionary="Language"
    FontFamily="{DynamicResource AllFontFamily}"
    Icon="/icon.ico"
    LanguageEnabled="True"
    LoadAnimationEnabled="True"
    SkinEnabled="True"
    TitleLeft="True"
    VerEnabled="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal">



