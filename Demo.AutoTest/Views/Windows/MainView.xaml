    <ui:Card Grid.Row="1" UniformCornerRadius="0">
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="Loaded">
                <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
        <Grid x:Name="NavigationViewControlsGrid">
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <menu:ThemesDictionary Theme="Dark" />
                        <menu:ControlsDictionary />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <menu:NavigationView
                x:Name="NavigationViewControls"
                FooterMenuItemsSource="{Binding FooterMenuItemsSource}"
                IsBackButtonVisible="Auto"
                IsPaneToggleVisible="True"
