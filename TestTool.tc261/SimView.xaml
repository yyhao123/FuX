<UserControl
    x:Class="TestTool.tc261.SimView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Demo="https://FuX.top"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:data="clr-namespace:FuX.Model.Specenum;assembly=FuX.Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lang="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:TestTool.tc261"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModel="clr-namespace:TestTool.tc261"
    lang:ResxLocalizationProvider.DefaultAssembly="Demo.Iot.Tool"
    lang:ResxLocalizationProvider.DefaultDictionary="Language">
    <!--<FrameworkElement.DataContext>
        <viewModel:SimViewModel />
    </FrameworkElement.DataContext>-->
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <Demo:RadioButtonConverter x:Key="RadioButtonConverter" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <GroupBox
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Grid.Row="0"
        Margin="5"
        Padding="0"
        wpf:ElevationAssist.Elevation="Dp2"
        wpf:GroupBoxAssist.HeaderPadding="7"
        Header="{Binding}"
        Style="{StaticResource MaterialDesignCardGroupBox}">
        <HeaderedContentControl.HeaderTemplate>
            <DataTemplate>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="Tools" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding ToolTitle}"
                        TextAlignment="Center" />
                </Grid>
            </DataTemplate>
        </HeaderedContentControl.HeaderTemplate>
        <Grid>
            <wpf:DrawerHost Grid.Column="0" wpf:DrawerHost.OpenMode="Standard">
                <wpf:DrawerHost.LeftDrawerContent>
                    <Demo:PropertyControl
                        BasicsData="{Binding BasicsData}"
                        BorderBrush="#00FFFFFF"
                        BorderThickness="0"
                        ExpCommand="{Binding Exp}"
                        IncCommand="{Binding Inc}" />
                </wpf:DrawerHost.LeftDrawerContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox
                        Grid.Column="1"
                        Margin="5"
                        Padding="0"
                        wpf:ElevationAssist.Elevation="Dp2"
                        wpf:GroupBoxAssist.HeaderPadding="7"
                        Header="{Binding}"
                        Style="{StaticResource MaterialDesignCardGroupBox}">
                        <HeaderedContentControl.HeaderTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="Function" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{lang:Loc 功能}"
                                        TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </HeaderedContentControl.HeaderTemplate>
                        <Grid>
                            <Button
                                Width="16"
                                Height="16"
                                Margin="10,-23,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                CommandParameter="{x:Static Dock.Left}">
                                <FrameworkElement.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignIconForegroundButton}" TargetType="{x:Type Button}">
                                        <Setter Property="Command" Value="{x:Static wpf:DrawerHost.OpenDrawerCommand}" />
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <wpf:PackIconExtension wpf:PackIconExtension.Kind="MenuClose" wpf:PackIconExtension.Size="16" />
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(ui:DrawerHost.IsLeftDrawerOpen), RelativeSource={RelativeSource AncestorType=ui:DrawerHost}}" Value="true">
                                                <Setter Property="Command" Value="{x:Static wpf:DrawerHost.CloseDrawerCommand}" />
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <wpf:PackIconExtension wpf:PackIconExtension.Kind="MenuOpen" wpf:PackIconExtension.Size="16" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </FrameworkElement.Style>
                            </Button>
                            <StackPanel
                                Margin="0,-30,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal"
                                ZIndex="2">
                                <Button
                                    Width="80"
                                    Height="30"
                                    Padding="0"
                                    wpf:ButtonAssist.CornerRadius="0,0,0,0"
                                    Command="{Binding On}"
                                    Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Column="0">
                                            <Image
                                                Width="15"
                                                Height="15"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{DynamicResource ConnectBase}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid Column="2">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{lang:Loc 打开}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Button>
                                <Button
                                    Width="80"
                                    Height="30"
                                    Padding="0"
                                    wpf:ButtonAssist.CornerRadius="0,5,0,0"
                                    Command="{Binding Off}"
                                    Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Column="0">
                                            <Image
                                                Width="15"
                                                Height="15"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{DynamicResource OffConnect}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid Column="2">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{lang:Loc 关闭}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Button>
                            </StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <GroupBox
                                    Grid.Row="0"
                                    Margin="5"
                                    Padding="0"
                                    wpf:ElevationAssist.Elevation="Dp2"
                                    wpf:GroupBoxAssist.HeaderPadding="7"
                                    Header="{Binding}"
                                    Style="{StaticResource MaterialDesignCardGroupBox}">
                                    <HeaderedContentControl.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="CallMerge" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{lang:Loc 数据类型}"
                                                    TextAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </HeaderedContentControl.HeaderTemplate>
                                    <Grid Margin="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="String"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.String}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Double"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Double}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Float"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Float}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Bool"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Bool}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Int"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Int}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="UInt"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Uint}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Long"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Long}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="7"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="ULong"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Ulong}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />

                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="8"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="Short"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Short}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                        <RadioButton
                                            Grid.Row="0"
                                            Grid.Column="9"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="UShort"
                                            IsChecked="{Binding DataType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:DataType.Ushort}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}" />
                                    </Grid>
                                </GroupBox>
                                <GroupBox
                                    Grid.Row="1"
                                    Margin="5,0,5,5"
                                    Padding="0"
                                    wpf:ElevationAssist.Elevation="Dp2"
                                    wpf:GroupBoxAssist.HeaderPadding="7"
                                    Header="{Binding}"
                                    Style="{StaticResource MaterialDesignCardGroupBox}">
                                    <HeaderedContentControl.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="CallMissed" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{lang:Loc 地址类型}"
                                                    TextAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </HeaderedContentControl.HeaderTemplate>
                                    <Grid Margin="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <RadioButton
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{lang:Loc 静态地址}"
                                            IsChecked="{Binding AddressType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:AddressType.VirtualStatic}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}"
                                            ToolTip="静态地址" />
                                        <RadioButton
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{lang:Loc 动态随机变化地址}"
                                            IsChecked="{Binding AddressType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:AddressType.VirtualDynamic_Random}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}"
                                            ToolTip="虚拟动态随机变化地址；地址后添加格式；{100}；{更新间隔}" />
                                        <RadioButton
                                            Grid.Column="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{lang:Loc 动态随机范围变化地址}"
                                            IsChecked="{Binding AddressType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:AddressType.VirtualDynamic_RandomScope}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}"
                                            ToolTip="虚拟动态随机范围变化地址；地址后添加格式； {100,1^100}；{100,1.1^9.9}；{500,00:00:00^12:00:00} ； {500,2000-01-01^2024-01-01}； {更新间隔,最小值^最大值}" />
                                        <RadioButton
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{lang:Loc 动态顺序变化地址}"
                                            IsChecked="{Binding AddressType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:AddressType.VirtualDynamic_Order}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}"
                                            ToolTip="虚拟动态顺序变化地址；地址后添加格式； {100,1}；{更新间隔,增长比例}" />
                                        <RadioButton
                                            Grid.Column="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{lang:Loc 动态顺序范围变化地址}"
                                            IsChecked="{Binding AddressType, Mode=TwoWay, Converter={StaticResource RadioButtonConverter}, ConverterParameter={x:Static data:AddressType.VirtualDynamic_OrderScope}}"
                                            Style="{StaticResource MaterialDesignSecondaryRadioButton}"
                                            ToolTip="虚拟动态顺序范围变化地址；地址后添加格式； {100,1,1^100} ；{100,0.1,1.1^9.9}； {500,1,00:00:00^12:00:00}； {500,1,2000-01-01^2024-01-01}； {更新间隔,增长比例,最小值^最大值}" />
                                    </Grid>
                                </GroupBox>
                                <Grid Margin="5,0,5,5" Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        Height="40"
                                        Column="0"
                                        ColumnSpan="4"
                                        Row="0" />
                                    <Grid
                                        Height="40"
                                        Column="0"
                                        ColumnSpan="4"
                                        Row="1" />
                                    <Grid
                                        Height="25"
                                        Margin="0,5,0,0"
                                        Column="0"
                                        Row="0">
                                        <Image
                                            Width="15"
                                            Height="15"
                                            HorizontalAlignment="Left"
                                            Source="{DynamicResource Address}"
                                            Stretch="Fill" />
                                        <TextBox
                                            Margin="20,-10,0,0"
                                            ui:HintAssist.Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                            wpf:HintAssist.Hint="{lang:Loc 地址}"
                                            wpf:TextFieldAssist.DecorationVisibility="Collapsed"
                                            wpf:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                                            BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                                            BorderThickness="0,0,0,1"
                                            Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            Text="{Binding Address}"
                                            TextOptions.TextFormattingMode="Display" />
                                    </Grid>
                                    <Demo:ButtonControl
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="80"
                                        Margin="10,0,10,0"
                                        Command="{Binding Read}"
                                        Content="{lang:Loc 读取}"
                                        CornerRadius="{DynamicResource WindowCornerRadius}"
                                        Icon="{DynamicResource Read}" />
                                    <Demo:ButtonControl
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="110"
                                        Command="{Binding Subscribe}"
                                        Content="{lang:Loc 订阅}"
                                        CornerRadius="{DynamicResource WindowCornerRadius}"
                                        Icon="{DynamicResource Subscribe}" />
                                    <Grid
                                        Height="25"
                                        Margin="0,5,0,0"
                                        Column="0"
                                        Row="1">
                                        <Image
                                            Width="15"
                                            Height="15"
                                            HorizontalAlignment="Left"
                                            Source="{DynamicResource Data}"
                                            Stretch="Fill" />
                                        <TextBox
                                            Margin="20,-10,0,0"
                                            wpf:HintAssist.Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                            wpf:HintAssist.Hint="{lang:Loc 数据}"
                                            wpf:TextFieldAssist.DecorationVisibility="Collapsed"
                                            wpf:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                                            BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                                            BorderThickness="0,0,0,1"
                                            Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            Text="{Binding Data}"
                                            TextOptions.TextFormattingMode="Display" />
                                    </Grid>
                                    <Demo:ButtonControl
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="80"
                                        Margin="10,0,10,0"
                                        Command="{Binding Write}"
                                        Content="{lang:Loc 写入}"
                                        CornerRadius="{DynamicResource WindowCornerRadius}"
                                        Icon="{DynamicResource Write}" />
                                    <Demo:ButtonControl
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Width="110"
                                        Command="{Binding UnSubscribe}"
                                        Content="{lang:Loc 取消订阅}"
                                        CornerRadius="{DynamicResource WindowCornerRadius}"
                                        Icon="{DynamicResource UnSubscribe}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <Grid Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <GroupBox
                            Grid.Column="0"
                            Margin="5,0,5,5"
                            Padding="0"
                            wpf:ElevationAssist.Elevation="Dp2"
                            wpf:GroupBoxAssist.HeaderPadding="7"
                            Header="{Binding}"
                            Style="{StaticResource MaterialDesignCardGroupBox}">
                            <HeaderedContentControl.HeaderTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="InformationVariant" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{lang:Loc 信息事件}"
                                            TextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </HeaderedContentControl.HeaderTemplate>
                            <Grid>
                                <Button
                                    Width="80"
                                    Height="30"
                                    Margin="0,-30,0,0"
                                    Padding="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    wpf:ButtonAssist.CornerRadius="0,0,0,0"
                                    Command="{Binding InfoClear}"
                                    Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Column="0">
                                            <Image
                                                Width="15"
                                                Height="15"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{DynamicResource Clear}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid Column="2">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{lang:Loc 清空}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Button>
                                <TextBox
                                    Margin="5"
                                    AcceptsReturn="True"
                                    BorderThickness="0,0,0,0"
                                    IsReadOnly="True"
                                    Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                    Text="{Binding InfoEvent}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Hidden">
                                    <!--<behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger behaviors:EventTrigger.EventName="TextChanged">
                                            <Demo:EventCommand Command="{Binding InfoEventTextChanged}" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>-->
                                </TextBox>
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Grid.Column="1"
                            Margin="0,0,5,5"
                            Padding="0"
                            wpf:ElevationAssist.Elevation="Dp2"
                            wpf:GroupBoxAssist.HeaderPadding="7"
                            Header="{Binding}"
                            Style="{StaticResource MaterialDesignCardGroupBox}">
                            <HeaderedContentControl.HeaderTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <wpf:PackIcon Grid.Column="0" wpf:PackIcon.Kind="ChartDonut" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{lang:Loc 数据事件}"
                                            TextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </HeaderedContentControl.HeaderTemplate>
                            <Grid>
                                <Button
                                    Width="80"
                                    Height="30"
                                    Margin="0,-30,0,0"
                                    Padding="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    wpf:ButtonAssist.CornerRadius="0,0,0,0"
                                    Command="{Binding DataClear}"
                                    Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Column="0">
                                            <Image
                                                Width="15"
                                                Height="15"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{DynamicResource Clear}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid Column="2">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{lang:Loc 清空}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Button>
                                <TextBox
                                    Margin="5"
                                    AcceptsReturn="True"
                                    BorderThickness="0,0,0,0"
                                    IsReadOnly="True"
                                    Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                    Text="{Binding DataEvent}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Hidden">
                                    <!--<b:Interaction.Triggers >
                                        <EventTrigger p19:EventTrigger.EventName="TextChanged" xmlns:p19="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors">
                                            <Demo:EventCommand Command="{Binding DataEventTextChanged}" />
                                        </EventTrigger>
                                    </b:Interaction.Triggers>-->
                                </TextBox>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </wpf:DrawerHost>
            <Button
                Width="165"
                Height="30"
                Margin="0,-30,0,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                wpf:ButtonAssist.CornerRadius="0,0,0,0"
                Command="{Binding GetAutoAllocatingParam}"
                Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                Visibility="{Binding GetAutoAllocatingParamVisibility}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Column="0">
                        <Image
                            Width="15"
                            Height="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{DynamicResource Get}"
                            Stretch="Fill" />
                    </Grid>
                    <Grid Column="2">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lang:Loc 获取对应类型参数}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Button>
        </Grid>
    </GroupBox>
</UserControl>