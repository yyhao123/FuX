<win:WindowBase
    x:Class="TestTool.tc261.WindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:btn="clr-namespace:Demo.Windows.Controls.button;assembly=Demo.Windows.Controls"
    xmlns:cos="https://FuX.top"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lang="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:TestTool.tc261"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="clr-namespace:Demo.Windows.Core.mvvm;assembly=Demo.Windows.Core"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:win="clr-namespace:Demo.Windows.Core;assembly=Demo.Windows.Core"
    Title="{lang:Loc SystemTitle}"
    Width="1600"
    Height="900"
    lang:ResxLocalizationProvider.DefaultAssembly="TestTool.tc261"
    lang:ResxLocalizationProvider.DefaultDictionary="Language"
    FontFamily="{DynamicResource AllFontFamily}"
    Icon="/icon.ico"
    LanguageEnabled="True"
    LoadAnimationEnabled="True"
    SkinEnabled="True"
    TitleLeft="True"
    VerEnabled="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="5"
            ui:ElevationAssist.Elevation="Dp2"
            ui:GroupBoxAssist.HeaderPadding="7"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:PackIcon Grid.Column="0" Kind="Finance" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lang:Loc 图表}"
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <ui:DialogHost
                Grid.Row="1"
                Width="Auto"
                Height="Auto"
                CloseOnClickAway="True"
                DialogContentUniformCornerRadius="{DynamicResource WindowCornerRadius_Double}"
                DialogTheme="Inherit"
                Identifier="ChartLineOperate"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">
                <ContentControl Content="{Binding RibbonTest}" />
                <!--<ContentControl Content="{Binding ChartControl}" />-->
                <!--<ContentControl Content="{Binding SimControl}" />-->
                <!--<cos:FilterDataGrid
                    x:Name="Fdg_AutoGenerateColumns"
                    CanDragSum="True"
                    CanUserGroup="True"
                    FooterItems="{Binding FooterList}"
                    HeadersVisibility="All"
                    IsReadOnly="False"
                    ItemsSource="{Binding DisplayEmployes, IsAsync=True}"
                    ScrollViewer.CanContentScroll="True"
                    SelectionUnit="Cell"
                    ShowRowIndex="True"
                    TotalFooterVisibility="Visible" />-->
                <!--<ContentControl Content="{Binding FilterDataGridControl}" />-->
            </ui:DialogHost>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="5,0,5,5"
            ui:ElevationAssist.Elevation="Dp2"
            ui:GroupBoxAssist.HeaderPadding="7"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:PackIcon Grid.Column="0" Kind="Function" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lang:Loc 功能}"
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <btn:ButtonControl
                    Command="{Binding Open}"
                    Content="{lang:Loc 打开}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource Open}" />

                <btn:ButtonControl
                    Grid.Column="1"
                    Command="{Binding Close}"
                    Content="{lang:Loc 关闭}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource CloseBase}" />

                <btn:ButtonControl
                    Grid.Column="2"
                    Command="{Binding Gather}"
                    Content="{lang:Loc 采集}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource 采集}" />

                <btn:ButtonControl
                    Grid.Column="3"
                    Command="{Binding GetTemp}"
                    Content="{lang:Loc 获取温度}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource Temp}" />


            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Width="300"
            Margin="0,5,5,5"
            ui:ElevationAssist.Elevation="Dp2"
            ui:GroupBoxAssist.HeaderPadding="7"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:PackIcon Grid.Column="0" Kind="ForumOutline" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lang:Loc 日志}"
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <TextBox
                Margin="0"
                Padding="0"
                VerticalAlignment="Stretch"
                AcceptsReturn="True"
                Foreground="{DynamicResource MaterialDesignBody}"
                SpellCheck.IsEnabled="True"
                Text="{Binding Log}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <mvvm:EventCommand Command="{Binding TextChanged}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
        </GroupBox>


        <GroupBox
            Grid.Row="2"
            Margin="5,0,5,5"
            ui:ElevationAssist.Elevation="Dp2"
            ui:GroupBoxAssist.HeaderPadding="7"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:PackIcon Grid.Column="0" Kind="TestTube" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{lang:Loc 持久化测试}"
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ui:NumericUpDown
                    Grid.Column="0"
                    ui:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                    ui:HintAssist.Hint="{lang:Loc 次数}"
                    ui:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignBody}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignFloatingHintNumericUpDown}"
                    Value="{Binding Count}" />


                <ui:NumericUpDown
                    Grid.Column="1"
                    ui:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                    ui:HintAssist.Hint="{lang:Loc 休息时间}"
                    ui:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignBody}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignFloatingHintNumericUpDown}"
                    Value="{Binding Interval}" />

                <btn:ButtonControl
                    Grid.Column="2"
                    Command="{Binding Start}"
                    Content="{lang:Loc 开始}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource Start}" />

                <btn:ButtonControl
                    Grid.Column="3"
                    Margin="5,0,0,0"
                    Command="{Binding Stop}"
                    Content="{lang:Loc 结束}"
                    CornerRadius="{DynamicResource WindowCornerRadius}"
                    Icon="{DynamicResource Stop}" />

            </Grid>

        </GroupBox>
    </Grid>
</win:WindowBase>
