<UserControl
    x:Class="Demo.Windows.Controls.property.PropertyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="https://FuX.top"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pt="clr-namespace:Demo.Windows.Controls.property.wpf"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    lang:ResxLocalizationProvider.DefaultAssembly="Demo.Windows.Controls"
    lang:ResxLocalizationProvider.DefaultDictionary="Language"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/PopupBox/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/ColorPicker/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/FilePicker/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/RadioButtonList/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/DockPanelSplitter/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/SpinControl/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/HeaderedEntrySlider/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/CheckMark/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/Controls/TextBlockEx/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/PropertyGrid/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/TreeListBox/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Demo.Windows.Controls;component/property/wpf/DataGrid/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ui:Card ui:ColorZoneAssist.Mode="Standard" UniformCornerRadius="0">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary>
                    <Style BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="{x:Type ComboBox}">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="ui:TextFieldAssist.DecorationVisibility" Value="Collapsed" />
                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesign.Brush.Primary}" />

                    </Style>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" TargetType="{x:Type pt:TextBoxEx}">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Secondary}" />
                    </Style>
                    <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox">
                        <Setter Property="ui:GroupBoxAssist.HeaderPadding" Value="0" />
                        <Setter Property="ui:ElevationAssist.Elevation" Value="Dp0" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                    <Style BasedOn="{StaticResource MaterialDesignSecondaryCheckBox}" TargetType="CheckBox" />
                    <DataTemplate x:Key="PropertyGridHeaderTemplate" DataType="GroupBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ui:PackIcon
                                Grid.Column="0"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Kind="Database" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="{lang:Loc 基础数据}"
                                TextAlignment="Center" />

                            <!--  导入导出  -->
                            <Button
                                Grid.Column="3"
                                Width="80"
                                Height="30"
                                Padding="0"
                                ui:ButtonAssist.CornerRadius="0,0,0,0"
                                Command="{Binding IncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Image
                                            Width="15"
                                            Height="15"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="{DynamicResource Inc}"
                                            Stretch="Fill" />
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{lang:Loc 导入}"
                                            TextAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </Button>

                            <Button
                                Grid.Column="4"
                                Width="80"
                                Height="30"
                                Padding="0"
                                ui:ButtonAssist.CornerRadius="0,5,0,0"
                                Command="{Binding ExpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Image
                                            Width="15"
                                            Height="15"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="{DynamicResource Exp}"
                                            Stretch="Fill" />
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{lang:Loc 导出}"
                                            TextAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </Button>

                        </Grid>
                    </DataTemplate>
                </ResourceDictionary>
            </Grid.Resources>

            <pt:PropertyGrid
                Margin="5,1,0,5"
                BorderBrush="#00000000"
                BorderThickness="0"
                CategoryControlType="GroupBox"
                CategoryHeaderTemplate="{StaticResource PropertyGridHeaderTemplate}"
                ControlFactory="{Binding ControlFactory, RelativeSource={RelativeSource AncestorType=UserControl}}"
                EnableLabelWidthResizing="False"
                EnumAsRadioButtonsLimit="0"
                Operator="{Binding Operator, RelativeSource={RelativeSource AncestorType=UserControl}}"
                SelectedObject="{Binding BasicsData, RelativeSource={RelativeSource AncestorType=UserControl}}"
                TabVisibility="Collapsed" />
        </Grid>
    </ui:Card>
</UserControl>
